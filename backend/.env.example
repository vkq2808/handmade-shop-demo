# Backend environment variables

# Server
PORT=5000

# Database
# For local MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/handmadeshop
# Or use a cloud connection string instead
# MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# Auth
JWT_SECRET=replace-with-a-long-random-string

# Frontend origin for CORS and links in emails
FRONTEND_URL=http://localhost:5173

# SMTP (optional but required for email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password-or-smtp-password
SMTP_FROM=noreply@hmshop.com
